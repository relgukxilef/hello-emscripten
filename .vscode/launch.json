{
    "version": "0.2.0",
    "configurations": [
        // https://github.com/microsoft/vscode-cmake-tools/blob/main/docs/debug-launch.md
        {
            "name": "(msvc) Launch",
            "type": "cppvsdbg",
            "request": "launch",
            // Resolved by CMake Tools:
            "program": "${cmake.testProgram}",
            "args": [ "${cmake.testArgs}" ],
            "stopAtEntry": false,
            "cwd": "${cmake.testWorkingDirectory}"
        }
    ]
}